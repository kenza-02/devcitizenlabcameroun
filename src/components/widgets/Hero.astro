---
import Image from '~/components/common/Image.astro';
import Button from '~/components/ui/Button.astro';
import type { CallToAction } from '~/types';

export interface Props {
  id?: string;
  title?: string;
  subtitle?: string;
  tagline?: string;
  content?: string;
  actions?: string | CallToAction[];

}

const {
  id,
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline,
  content = await Astro.slots.render('content'),
  actions = await Astro.slots.render('actions'),

} = Astro.props;
---

<section class="relative md:-mt-[76px] not-prose" {...id ? { id } : {}}>
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="pt-0 md:pt-[76px] pointer-events-none"></div>
    <div class="py-12 md:py-20">
      <div class="text-center pb-10 md:pb-16 max-w-6xl mx-auto flex flex-col items-center justify-center px-4">
        {
          tagline && (
            <p
              class="text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase"
              set:html={tagline}
            />
          )
        }
        {
          title && (
            <h1
              class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200 hero-title text-center w-full"
              set:html={title}
            />
          )
        }
        <div class="max-w-4xl mx-auto flex flex-col items-center justify-center w-full">
          {subtitle && <p class="text-xl md:text-2xl text-muted mb-8 dark:text-slate-300 hero-subtitle text-center w-full px-4" set:html={subtitle} />}
          {
            actions && (
              <div class="w-full flex justify-center">
                <div class="max-w-xs sm:max-w-md flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
                  {Array.isArray(actions) ? (
                    actions.map((action) => (
                      <div class="flex w-full sm:w-auto justify-center">
                        <Button {...(action || {})} class="w-full sm:mb-0" />
                      </div>
                    ))
                  ) : (
                    <Fragment set:html={actions} />
                  )}
                </div>
              </div>
            )
          }
        </div>
        {content && <Fragment set:html={content} />}
      </div>
      <div class="flex justify-center items-center">
         <div class="relative max-w-5xl mx-auto">
           <Image
             src="~/assets/images/drapeau_Senegal.png"
             class="mx-auto rounded-md w-full block"
             widths={[400, 768, 1024, 2040]}
             sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
             loading="eager"
             width={1024}
             height={576}
             aspectRatio={16/9}
             alt="Drapeau du Sénégal"
           />
         </div>
      </div>
    </div>
  </div>
</section>
