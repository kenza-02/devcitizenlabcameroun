---
import { FaPhoneAlt } from "react-icons/fa";
import { FaLocationDot } from "react-icons/fa6";
import { FaEnvelopeOpenText } from "react-icons/fa";
import { FaFacebookF } from "react-icons/fa";
import { FaXTwitter } from "react-icons/fa6";
import { FaLinkedinIn } from "react-icons/fa";
import { FaTiktok } from "react-icons/fa";

const contactCard = [
  {
    name: "Adresse",
    link: "Liberté 6 extension villa N°263, Dakar, Sénégal",
    icon: FaLocationDot,
  },
  {
    name: "Email",
    link: "aclsenegal@africtivistes.org",
    icon: FaEnvelopeOpenText,
  },
  {
    name: "Téléphone",
    link: "+221 78 018 01 05",
    icon: FaPhoneAlt,
  },
];

const socialLinks = [
  {
    name: "Facebook",
    link: "https://www.facebook.com/share/1AE5haRBVN/?mibextid=wwXIfr",
    icon: FaFacebookF,
  },
  {
    name: "TikTok",
    link: "https://www.tiktok.com/@citizenlabsenegal?_r=1&_t=ZM-925WRddPKoO",
    icon: FaTiktok,
  },
  {
    name: "LinkedIn",
    link: "https://www.linkedin.com/company/citizenlab-senegal/",
    icon: FaLinkedinIn,
  },
  {
    name: "Twitter",
    link: "https://x.com/citizenlabsn?s=11",
    icon: FaXTwitter,
  },
];

const bgClasses = {
  Facebook: "bg-[#1877F2] hover:bg-[#145DBF]",
  TikTok: "bg-black hover:bg-gray-800",
  LinkedIn: "bg-[#0A66C2] hover:bg-[#004182]",
  Twitter: "bg-blue-950 hover:bg-gray-800",
};
---

<!-- Informations de contact -->
<div class="w-full lg:w-1/2 space-y-8 relative">
  <div class="bg-white rounded-2xl shadow-xl p-8 md:p-10">
    <div class="mb-8">
      <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-3">
        Nos coordonnées
      </h2>
      <div
        class="w-20 h-1 bg-gradient-to-r from-green-500 to-emerald-500 rounded-full"
      >
      </div>
    </div>

    <ul class="space-y-2">
      {
        contactCard.map((card) => {
          const Icon = card.icon;
          return (
            <li class="group flex items-start space-x-4 p-4 rounded-xl hover:bg-green-50 transition-all duration-300 cursor-pointer">
              <span class="p-4 bg-gradient-to-br from-green-100 to-emerald-100 rounded-xl text-green-600 group-hover:scale-110 group-hover:shadow-lg transition-all duration-300">
                <Icon size={24} />
              </span>
              <div class="flex flex-col space-y-1 flex-1">
                <h3 class="text-lg font-bold text-gray-800 group-hover:text-green-600 transition-colors">
                  {card.name}
                </h3>
                <p class="text-gray-600 text-base leading-relaxed">
                  {card.link}
                </p>
              </div>
            </li>
          );
        })
      }
    </ul>
  </div>

  <!-- Réseaux sociaux -->
  <div
    class="bg-gradient-to-br from-green-500 to-emerald-600 rounded-2xl shadow-xl p-8"
  >
    <h3 class="text-2xl font-bold text-white mb-6">Suivez-nous</h3>
    <div class="flex flex-wrap gap-4">
      {
        socialLinks.map((social) => {
          const SocialIcon = social.icon;
          const bgClass =
            bgClasses[social.name] || "bg-gray-600 hover:bg-gray-800";

          return (
            <a
              href={social.link}
              target="_blank"
              rel="noopener noreferrer"
              class={`p-4 rounded-xl text-white transition-all duration-300 transform hover:scale-110 hover:shadow-xl ${bgClass}`}
              aria-label={social.name}
            >
              <SocialIcon size={24} />
            </a>
          );
        })
      }
    </div>
    <p class="text-white/90 text-sm mt-6 leading-relaxed">
      Rejoignez notre communauté et restez informé de nos dernières actualités !
    </p>
  </div>
</div>