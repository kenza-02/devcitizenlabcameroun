---
import { getNextFormation } from "~/utils/api.js";
import { Image } from "astro:assets";
import nifa from "~/assets/images/Nifa.jpg";

import { FaCalendarCheck, FaUsers } from "react-icons/fa";
import { GoGoal } from "react-icons/go";
import { CiCircleInfo } from "react-icons/ci";
import { FaArrowRightLong } from "react-icons/fa6";
import { IoIosStats } from "react-icons/io";
import { IoBookOutline } from "react-icons/io5";

const nextFormation = await getNextFormation();
console.log("nextFormation", nextFormation);

// Fonction pour formater la date
function formatDate(dateString) {
  if (!dateString) return "";
  const date = new Date(dateString);
  return date.toLocaleDateString("fr-FR", {
    day: "numeric",
    month: "long",
    year: "numeric",
  });
}

// DonnÃ©es par dÃ©faut
const defaultEventDetails = [
  {
    title: "DurÃ©e",
    details: "6 semaines â€¢ Du 4 nov au 15 dÃ©c 2025",
    icon: FaCalendarCheck,
  },
  {
    title: "Format",
    details: "Hybride â€¢ PrÃ©sentiel + en ligne",
    icon: CiCircleInfo,
  },
  {
    title: "Objectif",
    details: "CrÃ©er un prototype civic tech dÃ©ployable",
    icon: GoGoal,
  },
];

// Construire les dÃ©tails dynamiques
let eventDetails = defaultEventDetails;
let formationNom = "Civic Tech Innovators Program";
let formationDescription = "Apprenez Ã  concevoir, dÃ©velopper et dÃ©ployer des solutions digitales pour rÃ©soudre des problÃ¨mes citoyens concrets. De l'idÃ©e au prototype fonctionnel en 6 semaines.";
let formationImage = nifa;
let formationImageAlt = "Formation Civic Tech";
let formationSlug = "civic-tech-innovators";
let formationPrix = null;
let formationLien = null;
let formationStatut = "Formation";

if (nextFormation) {
  const details = [];
  
  if (nextFormation.formation?.date) {
    details.push({
      title: "Date",
      details: formatDate(nextFormation.formation.date),
      icon: FaCalendarCheck,
    });
  }
  
  if (nextFormation.formation?.lieu) {
    details.push({
      title: "Lieu",
      details: nextFormation.formation.lieu,
      icon: CiCircleInfo,
    });
  }
  
  if (nextFormation.formation?.duree) {
    details.push({
      title: "DurÃ©e",
      details: nextFormation.formation.duree,
      icon: GoGoal,
    });
  }
  
  if (nextFormation.formation?.places) {
    details.push({
      title: "Places",
      details: `${nextFormation.formation.places} places disponibles`,
      icon: FaUsers,
    });
  }
  
  if (details.length > 0) {
    eventDetails = details;
  }
  
  formationNom = nextFormation.formation?.nom || formationNom;
  formationDescription = nextFormation.formation?.description || formationDescription;
  formationImage = nextFormation.featuredImage?.node?.mediaItemUrl || formationImage;
  formationImageAlt = nextFormation.featuredImage?.node?.altText || formationImageAlt;
  formationSlug = nextFormation.slug || formationSlug;
  formationPrix = nextFormation.formation?.prix;
  formationLien = nextFormation.formation?.lien?.url;
  
  // GÃ©rer le statut (peut Ãªtre un tableau ou une string)
  if (nextFormation.formation?.statut) {
    if (Array.isArray(nextFormation.formation.statut)) {
      formationStatut = nextFormation.formation.statut[0] || "Formation";
    } else {
      formationStatut = nextFormation.formation.statut;
    }
  }
}

const isExternalImage = typeof formationImage === "string" && formationImage.startsWith("http");
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Titre de section -->
    <div class="text-center mb-16">
      <div class="inline-block animate-fade-in-down mb-6">
        <span
          class="px-5 py-2 border border-green-600 text-green-600 bg-white rounded-full text-xs font-semibold tracking-wide uppercase"
        >
          Ã‰vÃ©nements
        </span>
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Formations & <span class="text-green-600">Bootcamps</span>
      </h2>
      <p class="text-lg text-center text-gray-600 max-w-2xl mx-auto">
        DÃ©veloppez vos compÃ©tences en civic tech et devenez un acteur du
        changement digital au Cameroun
      </p>
    </div>

    <!-- Formation phare en vedette -->
    <div class="max-w-5xl mx-auto mb-8">
      <div class="bg-gradient-to-br from-green-50 to-white rounded-2xl shadow-lg overflow-hidden">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
          <!-- Image -->
          <div class="relative h-56 lg:h-auto overflow-hidden">
            {isExternalImage ? (
              <img
                src={formationImage}
                alt={formationImageAlt}
                class="w-full h-full object-cover"
              />
            ) : (
              <Image
                src={formationImage}
                alt={formationImageAlt}
                class="w-full h-full object-cover"
              />
            )}
            <div class="absolute top-4 left-4">
              <span class="bg-red-600 text-white text-xs font-bold px-3 py-1.5 rounded-full shadow-lg">
                ðŸ”¥ Prochaine session
              </span>
            </div>
            <div class="absolute bottom-4 right-4">
              <span class="bg-white text-gray-800 text-xs font-semibold px-3 py-1.5 rounded-full shadow-lg">
                Places limitÃ©es
              </span>
            </div>
          </div>

          <!-- Contenu -->
          <div class="p-6 lg:p-8 flex flex-col justify-center">
            <div class="mb-4">
              <span class="inline-block bg-green-100 text-green-800 text-xs font-semibold px-2.5 py-1 rounded-full mb-3">
                {formationStatut}
              </span>
              <h3 class="text-2xl lg:text-3xl font-bold text-gray-800 mb-3">
                {formationNom}
              </h3>
              <p class="text-gray-600 text-base mb-4">
                {formationDescription}
              </p>
            </div>

            <!-- DÃ©tails -->
            <div class="space-y-3 mb-6 text-sm">
              {eventDetails.map((detail) => (
                <div class="flex items-start gap-2.5">
                  <div class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                    <detail.icon className="w-4 h-4 text-green-600" />
                  </div>
                  <div>
                    <div class="font-semibold text-gray-800">
                      {detail.title}
                    </div>
                    <div class="text-gray-600">{detail.details}</div>
                  </div>
                </div>
              ))}
              {formationPrix && (
                <div class="flex items-start gap-2.5">
                  <div class="flex-shrink-0 w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                    <IoIosStats className="w-4 h-4 text-green-600" />
                  </div>
                  <div>
                    <div class="font-semibold text-gray-800">Prix</div>
                    <div class="text-gray-600">{formationPrix}</div>
                  </div>
                </div>
              )}
            </div>

            <!-- Boutons -->
            <div class="flex flex-col sm:flex-row gap-3">
              <a
                href={formationLien || `/formations/${formationSlug}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center justify-center gap-2 px-5 py-2.5 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 shadow-md transition-all"
              >
                S'inscrire
                <FaArrowRightLong className="w-3 h-3" />
              </a>
              <a
                href={`/formations/${formationSlug}`}
                class="inline-flex items-center justify-center gap-2 px-5 py-2.5 border border-green-600 text-green-600 font-semibold rounded-lg hover:bg-green-50 transition-all"
              >
                En savoir plus
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bouton Voir toutes les formations -->
    <div class="text-center">
      <a
      
        href="/formations"
        class="inline-flex items-center gap-3 px-8 py-4 text-lg font-semibold bg-gray-900 text-white hover:bg-gray-800 rounded-lg shadow-lg hover:shadow-xl transition-all"
      >
        Voir toutes les formations
        <IoBookOutline className="w-5 h-5" />
      </a>
    </div>
