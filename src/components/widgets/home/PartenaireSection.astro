---
const partenaires = [
  {
    src: "https://update.africtivistes.org/wp-content/uploads/2023/10/Logo-Africtivistes.png",
    href: "https://www.africtivistes.com/fr/",
    alt: "AfricTivistes",
  },
  {
    src: "https://citizenlab.africtivistes.org/cameroun/wp-content/uploads/sites/2/2025/04/logoue.png",
    href: "https://international-partnerships.ec.europa.eu/index_fr",
    alt: "EU International Partnerships",
  },
  {
    src: "https://citizenlab.africtivistes.org/cameroun/wp-content/uploads/sites/2/2025/04/logoydc.png",
    href: "https://youthdemocracycohort.com/",
    alt: "Youth Democracy Cohort",
  },
];
---

<section class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Titre de section -->
    <div class="text-center mb-16">
      <div class="inline-block animate-fade-in-down mb-6">
        <span
          class="px-5 py-2 border border-green-600 text-green-600 bg-transparent rounded-full text-xs font-semibold tracking-wide uppercase"
        >
          Partenariats
        </span>
      </div>
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Nos <span class="text-green-600">partenaires</span>
      </h2>
      <p class="text-lg text-center text-gray-600 max-w-2xl mx-auto">
        Le projet est financ√© par l' EU International Partnerships et soutenu
        par la Youth Democracy Cohort
      </p>
    </div>

    <!-- Grille des partenaires -->
    <div
      class="flex flex-wrap justify-center items-center gap-8 sm:gap-12 md:gap-16 lg:gap-20"
    >
      {
        partenaires.map((partenaire) => (
          <a 
            href={partenaire.href} 
            class="flex justify-center items-center w-1/2 sm:w-1/3 lg:w-auto px-4 sm:px-6 lg:px-10" 
            target="_blank" 
            rel="noopener noreferrer"
          >
            <img src={partenaire.src} alt={partenaire.alt} class="max-h-10 sm:max-h-12 object-contain" />
          </a>
        ))
      }
    </div>
  </div>
</section>
