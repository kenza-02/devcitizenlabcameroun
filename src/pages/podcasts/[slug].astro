---
import Layout from "~/layouts/PageLayout.astro";
import type { Podcast } from "~/types/podcasts";
import { getPodcastPosts, extractAudioUrl } from "~/utils/api";

export async function getStaticPaths() {
  const posts = await getPodcastPosts();

  return posts.map((post) => ({
    params: { slug: String(post.slug) },
    props: { post },
  }));
}

const { post } = Astro.props;

const podcast: Podcast = {
  id: post.id,
  slug: post.slug,
  title: post.title,
  episode: post.categories?.nodes?.[0]?.name ?? "Podcast",
  category: post.categories?.nodes?.[0]?.name ?? "Podcast",
  date: new Date(post.date).toLocaleDateString("fr-FR", {
    day: "numeric",
    month: "long",
    year: "numeric",
  }),
  description: post.excerpt?.replace(/<[^>]+>/g, "") ?? "",
  content: post.content ?? "",
  audioHtml: extractAudioUrl(post.content) ?? "",
  coverImage: post.featuredImage?.node?.mediaItemUrl,
};

const metadata = {
  title: `${podcast.title} – Podcast`,
  description: podcast.description,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section avec effet parallax -->
  <div class="relative overflow-hidden bg-gradient-to-br from-green-50 via-emerald-50 to-teal-50">
    <!-- Animated background shapes -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-green-200/30 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute top-60 -left-20 w-60 h-60 bg-emerald-200/30 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      <div class="absolute bottom-20 right-1/3 w-96 h-96 bg-teal-200/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>

    <article class="relative max-w-5xl mx-auto px-6 py-16 md:py-24">
      <!-- Breadcrumb -->
      <nav class="flex items-center gap-2 text-sm text-gray-600 mb-8 animate-fade-in">
        <a href="/" class="hover:text-green-600 transition-colors">Accueil</a>
        <span>/</span>
        <a href="/podcasts" class="hover:text-green-600 transition-colors">Podcasts</a>
        <span>/</span>
        <span class="text-green-700 font-medium">{podcast.title}</span>
      </nav>

      <div class="grid md:grid-cols-2 gap-12 items-center">
        <!-- Left: Cover Image with effects -->
        <div class="relative group animate-slide-in-left">
          {podcast.coverImage && (
            <div class="relative">
              <!-- Glow effect -->
              <div class="absolute -inset-4 bg-gradient-to-r from-green-400 to-emerald-500 rounded-3xl blur-2xl opacity-20 group-hover:opacity-30 transition-opacity duration-500"></div>
              
              <!-- Image container -->
              <div class="relative overflow-hidden rounded-2xl shadow-2xl transform group-hover:scale-[1.02] transition-transform duration-500">
                <img
                  src={podcast.coverImage}
                  alt={podcast.title}
                  class="w-full aspect-square object-cover"
                />
                <!-- Overlay gradient -->
                <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>

              <!-- Floating badge -->
              <div class="absolute -top-4 -right-4 bg-white rounded-full shadow-lg p-3 animate-bounce-slow">
                <svg class="w-8 h-8 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 14.5v-9l6 4.5-6 4.5z"/>
                </svg>
              </div>
            </div>
          )}
        </div>

        <!-- Right: Content -->
        <div class="animate-slide-in-right">
          <!-- Category badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-500 text-white text-sm font-semibold rounded-full shadow-lg mb-6 transform hover:scale-105 transition-transform">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 12a2 2 0 100-4 2 2 0 000 4z"/>
              <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd"/>
            </svg>
            {podcast.category}
          </div>

          <!-- Title -->
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4 leading-tight">
            {podcast.title}
          </h1>

          <!-- Meta info -->
          <div class="flex flex-wrap items-center gap-4 text-gray-600 mb-6">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z"/>
              </svg>
              <span class="font-medium">{podcast.episode}</span>
            </div>
            <span class="text-gray-400">•</span>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
              </svg>
              <time class="font-medium">{podcast.date}</time>
            </div>
          </div>

          <!-- Description -->
          <p class="text-base text-gray-700 leading-relaxed mb-8">
            {podcast.description}
          </p>

          <!-- Action buttons -->
          <div class="audio-player-wrapper" set:html={podcast.audioHtml} />
        </div>
      </div>
    </article>
  </div>

  <style>
    @keyframes fade-in {
      from {
        opacity: 0;
      }
      to {
        opacity: 1;
      }
    }

    @keyframes slide-in-left {
      from {
        opacity: 0;
        transform: translateX(-30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes slide-in-right {
      from {
        opacity: 0;
        transform: translateX(30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes bounce-slow {
      0%, 100% {
        transform: translateY(0);
      }
      50% {
        transform: translateY(-10px);
      }
    }

    .animate-fade-in {
      animation: fade-in 0.6s ease-out;
    }

    .animate-slide-in-left {
      animation: slide-in-left 0.8s ease-out;
    }

    .animate-slide-in-right {
      animation: slide-in-right 0.8s ease-out;
    }

    .animate-bounce-slow {
      animation: bounce-slow 3s ease-in-out infinite;
    }

    /* Style pour le contenu HTML */
    .prose :global(h2) {
      @apply text-2xl font-bold text-gray-900 mt-12 mb-4;
    }

    .prose :global(h3) {
      @apply text-xl font-semibold text-gray-800 mt-8 mb-3;
    }

    .prose :global(p) {
      @apply mb-4;
    }

    .prose :global(a) {
      @apply text-green-600 hover:text-green-700 underline decoration-green-300 hover:decoration-green-500 transition-colors;
    }

    .prose :global(ul) {
      @apply list-disc list-inside space-y-2 ml-4;
    }

    .prose :global(ol) {
      @apply list-decimal list-inside space-y-2 ml-4;
    }

    .prose :global(blockquote) {
      @apply border-l-4 border-green-500 pl-4 italic text-gray-700 my-6;
    }

    /* Audio player styling */
    .audio-player-wrapper :global(audio) {
      @apply w-full rounded-lg shadow-md;
    }
  </style>
</Layout>