---
import Layout from "~/layouts/PageLayout.astro";
import Banner from "~/components/widgets/Banner.astro";
import { getAllPodcast } from "~/utils/api.js";
import { Image } from "astro:assets";
import podcast_bg from "~/assets/images/podcast_bg.jpg";

const podcasts = await getAllPodcast();

const metadata = {
  title: "Podcast",
  description: "Écoutez nos podcasts sur l'engagement citoyen et le changement social.",
};

// Compter les types
const audioCount = podcasts.filter((p: any) => p.podcast?.type[0] === 'audio').length;
const videoCount = podcasts.filter((p: any) => p.podcast?.type[0] === 'video').length;

---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Banner
    title={metadata.title}
    subtitle={metadata.description}
  >
    <Image
      src={podcast_bg}
      alt="Podcasts"
      class="w-full h-full object-cover absolute inset-0 border-0 z-0 scale-110 transition-transform duration-700"
    />
  </Banner>

  <!-- Main Content -->
  <section class="relative bg-white">

    <div class="max-w-screen-xl mx-auto px-6 md:px-12 py-16 md:py-24">
      
      <!-- Header + Filters -->
      <div class="flex flex-col lg:flex-row lg:items-end lg:justify-between gap-8 mb-12">
        
        <!-- Left: Title -->
        <div>
          <div class="inline-flex items-center gap-2 px-4 py-2 bg-green-100 rounded-full mb-4">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-500 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-green-600"></span>
            </span>
            <span class="text-green-700 text-sm font-semibold">{podcasts.length} épisodes disponibles</span>
          </div>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-black text-gray-900 leading-tight">
            Tous nos <span class="text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-green-700">épisodes</span>
          </h2>
        </div>

        <!-- Right: Filter Tabs -->
        <div class="flex items-center gap-2 p-1.5 bg-gray-100 rounded-2xl" id="filter-tabs">
          <button 
            data-filter="all"
            class="filter-btn active flex items-center gap-2 px-5 py-3 rounded-xl text-sm font-bold transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
            </svg>
            Tous
            <span class="px-2 py-0.5 rounded-full bg-white/50 text-xs">{podcasts.length}</span>
          </button>
          <button 
            data-filter="audio"
            class="filter-btn flex items-center gap-2 px-5 py-3 rounded-xl text-sm font-bold transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            </svg>
            Audio
            <span class="px-2 py-0.5 rounded-full bg-white/50 text-xs">{audioCount}</span>
          </button>
          <button 
            data-filter="video"
            class="filter-btn flex items-center gap-2 px-5 py-3 rounded-xl text-sm font-bold transition-all duration-300"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
            Vidéo
            <span class="px-2 py-0.5 rounded-full bg-white/50 text-xs">{videoCount}</span>
          </button>
        </div>
      </div>

      {podcasts.length > 0 ? (
        <>
          <!-- Featured Episode (Latest) -->
          {podcasts[0] && (
            <a href={`/podcasts/${podcasts[0].slug}`} class="group block mb-16">
              <article 
                class="podcast-item relative grid md:grid-cols-2 gap-8 p-6 md:p-8 bg-gradient-to-br from-green-900 via-green-900 to-slate-900 rounded-3xl overflow-hidden"
                data-type={podcasts[0].podcast?.type || 'videos'}
              >
                <!-- Background Pattern -->
                <div class="absolute inset-0 opacity-10">
                  <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 32px 32px;"></div>
                </div>
                
                <!-- Glow Effect -->
                <div class="absolute top-0 right-0 w-96 h-96 bg-green-500/30 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>

                <!-- Image -->
                <div class="relative aspect-video md:aspect-[4/3] rounded-2xl overflow-hidden">
                  {podcasts[0].featuredImage?.node?.mediaItemUrl ? (
                    <img
                      src={podcasts[0].featuredImage.node.mediaItemUrl}
                      alt={podcasts[0].title}
                      class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                    />
                  ) : (
                    <div class="w-full h-full bg-gradient-to-br from-green-600 to-green-700 flex items-center justify-center">
                      <svg class="w-20 h-20 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                      </svg>
                    </div>
                  )}
                  
                  <!-- Play Button Overlay -->
                  <div class="absolute inset-0 flex items-center justify-center bg-black/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                    <div class="w-20 h-20 rounded-full bg-white flex items-center justify-center shadow-2xl transform group-hover:scale-110 transition-transform">
                      <svg class="w-8 h-8 text-green-600 ml-1" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M8 5v14l11-7z"/>
                      </svg>
                    </div>
                  </div>

                  <!-- Type Badge -->
                  <div class="absolute top-4 left-4 flex items-center gap-2 px-3 py-1.5 bg-white/90 backdrop-blur-sm rounded-full">
                    {podcasts[0].podcast?.type[0] === 'audio' ? (
                      <>
                        <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                        </svg>
                        <span class="text-xs font-bold text-green-600">AUDIO</span>
                      </>
                    ) : (
                      <>
                        <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                        <span class="text-xs font-bold text-green-600">VIDÉO</span>
                      </>
                    )}
                  </div>
                </div>

                <!-- Content -->
                <div class="relative flex flex-col justify-center text-white">
                  <div class="flex items-center gap-3 mb-4">
                    <span class="px-3 py-1 bg-green-500/30 rounded-full text-xs font-bold text-green-300 uppercase tracking-wider">
                      Dernier épisode
                    </span>
                    {podcasts[0].date && (
                      <span class="text-white/50 text-sm">
                        {new Date(podcasts[0].date).toLocaleDateString("fr-FR", {
                          day: "numeric",
                          month: "long",
                          year: "numeric",
                        })}
                      </span>
                    )}
                  </div>
                  
                  <h3 class="text-2xl md:text-3xl lg:text-4xl font-black mb-4 leading-tight group-hover:text-green-300 transition-colors" set:html={podcasts[0].title} />
                  
                  {podcasts[0].excerpt && (
                    <div class="text-white/70 leading-relaxed mb-6 line-clamp-3" set:html={podcasts[0].excerpt} />
                  )}

                  <div class="flex items-center gap-4">
                    <span class="inline-flex items-center gap-2 text-green-300 font-bold group-hover:text-white transition-colors">
                      {podcasts[0].podcast?.type[0] === 'audio' ? 'Écouter' : 'Regarder'} l'épisode
                      <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
                      </svg>
                    </span>
                  </div>
                </div>
              </article>
            </a>
          )}

          <!-- Episodes Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="podcasts-grid">
            {podcasts.slice(1).map((post: any, index: number) => {
              const type = post.podcast?.type[0] || 'video';
              const imageUrl = post.featuredImage?.node?.mediaItemUrl;

              return (
                <a href={`/podcasts/${post.slug}`} class="group block">
                  <article 
                    class="podcast-item h-full bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl border border-gray-100 transition-all duration-500 hover:-translate-y-1"
                    data-type={type}
                  >
                    <!-- Image -->
                    <div class="relative aspect-video overflow-hidden">
                      {imageUrl ? (
                        <img
                          src={imageUrl }
                          alt={post.title}
                          class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                          loading="lazy"
                        />
                      ) : (
                        <div class={`w-full h-full flex items-center justify-center ${type === 'audio' ? 'bg-gradient-to-br from-green-500 to-green-700' : 'bg-gradient-to-br from-green-500 to-green-700'}`}>
                          {type === 'audio' ? (
                            <svg class="w-12 h-12 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                            </svg>
                          ) : (
                            <svg class="w-12 h-12 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                            </svg>
                          )}
                        </div>
                      )}

                      <!-- Play Overlay -->
                      <div class="absolute inset-0 flex items-center justify-center bg-black/30 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <div class="w-14 h-14 rounded-full bg-white flex items-center justify-center shadow-xl">
                          <svg class="w-6 h-6 text-green-600 ml-0.5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M8 5v14l11-7z"/>
                          </svg>
                        </div>
                      </div>

                      <!-- Type Badge -->
                      <div class={`absolute top-3 left-3 flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-bold ${type === 'audio' ? 'bg-green-500 text-white' : 'bg-green-500 text-white'}`}>
                        {type === 'audio' ? (
                          <>
                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
                            </svg>
                            Audio
                          </>
                        ) : (
                          <>
                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                            </svg>
                            Vidéo
                          </>
                        )}
                      </div>

                      <!-- Episode Number -->
                      <div class="absolute top-3 right-3 w-8 h-8 rounded-full bg-black/50 backdrop-blur-sm flex items-center justify-center">
                        <span class="text-white text-xs font-bold">{String(podcasts.length - index - 1).padStart(2, '0')}</span>
                      </div>
                    </div>

                    <!-- Content -->
                    <div class="p-5">
                      {post.date && (
                        <time class="text-gray-400 text-xs font-medium uppercase tracking-wider mb-2 block">
                          {new Date(post.date).toLocaleDateString("fr-FR", {
                            day: "numeric",
                            month: "long",
                            year: "numeric",
                          })}
                        </time>
                      )}

                      <h3 class="text-lg font-bold text-gray-900 mb-2 line-clamp-2 group-hover:text-green-600 transition-colors" set:html={post.title} />

                      {post.excerpt && (
                        <div class="text-gray-500 text-sm line-clamp-2 leading-relaxed" set:html={post.excerpt} />
                      )}
                    </div>
                  </article>
                </a>
              );
            })}
          </div>
        </>
      ) : (
        <!-- Empty State -->
        <div class="text-center py-24">
          <div class="w-24 h-24 mx-auto mb-6 rounded-full bg-green-100 flex items-center justify-center">
            <svg class="w-12 h-12 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-3">
            Aucun podcast disponible
          </h3>
          <p class="text-gray-500 max-w-md mx-auto">
            Nos premiers épisodes arrivent bientôt. Restez connectés !
          </p>
        </div>
      )}
    </div>

  </section>
</Layout>

<style>
  .filter-btn {
    @apply text-gray-500;
  }
  .filter-btn.active {
    @apply bg-white text-green-600 shadow-md;
  }
  .filter-btn:not(.active):hover {
    @apply text-gray-700 bg-gray-50;
  }

  .podcast-item.hidden {
    display: none;
  }
</style>

<script>
  // Filter functionality
  document.addEventListener('DOMContentLoaded', () => {
    const filterBtns = document.querySelectorAll('.filter-btn');
    const podcastItems = document.querySelectorAll('.podcast-item');

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        // Update active state
        filterBtns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        // Filter items
        const filter = btn.getAttribute('data-filter');
        
        podcastItems.forEach(item => {
          const type = item.getAttribute('data-type');
          if (filter === 'all' || type === filter) {
            item.classList.remove('hidden');
            item.closest('a')?.classList.remove('hidden');
          } else {
            item.classList.add('hidden');
            item.closest('a')?.classList.add('hidden');
          }
        });
      });
    });
  });
</script>