---
import Layout from "~/layouts/PageLayout.astro";
import { getAllVideos } from "~/utils/api.js";
import video from "~/assets/images/video.jpg";

// Génération des chemins statiques
export async function getStaticPaths() {
  const videos = await getAllVideos();

  return videos.map((post: any) => ({
    params: { slug: post.slug },
  }));
}

// Récupération du slug
const { slug } = Astro.params;

// Récupération des vidéos
const videos = await getAllVideos();
const videoPost = videos.find((post: any) => post.slug === slug);

if (!videoPost) {
  return Astro.redirect('/videos');
}

// Données de la vidéo
const video = {
  title: videoPost.title ?? "Vidéo",
  excerpt: videoPost.excerpt ?? "",
  content: videoPost.content ?? "",
  date: videoPost.date
    ? new Date(videoPost.date).toLocaleDateString("fr-FR", {
        year: "numeric",
        month: "long",
        day: "numeric",
      })
    : "",
  image: videoPost.featuredImage?.node?.mediaItemUrl ?? null,
  imageAlt: videoPost.featuredImage?.node?.altText ?? videoPost.title ?? "Vidéo",
  videoNumber: videos.findIndex((v: any) => v.slug === slug) + 1,
};

// Autres vidéos
const otherVideos = videos.filter((v: any) => v.slug !== slug).slice(0, 4);

const metadata = {
  title: `${video.title} - Vidéos`,
  description: video.excerpt?.replace(/<[^>]*>/g, '').slice(0, 160) || "Regardez cette vidéo.",
};
---

<Layout metadata={metadata}>

  <!-- Hero Section -->
  <section class="relative bg-[#0a0a0a] pt-8 pb-16 md:pb-24">
    
    <!-- Background Elements -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute top-0 left-1/4 w-[500px] h-[500px] bg-green-500/10 rounded-full blur-[150px]"></div>
      <div class="absolute bottom-0 right-1/4 w-[400px] h-[400px] bg-yellow-500/10 rounded-full blur-[120px]"></div>
    </div>

    <div class="relative z-10 max-w-screen-xl mx-auto px-6 md:px-12">
      
      <!-- Navigation -->
      <nav class="flex items-center justify-between mb-8">
        <a href="/videos" class="group flex items-center gap-3 text-white/60 hover:text-white transition-colors">
          <div class="w-10 h-10 rounded-full bg-white/10 border border-white/20 flex items-center justify-center group-hover:bg-white/20 transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
            </svg>
          </div>
          <span class="text-sm font-medium">Toutes les vidéos</span>
        </a>
      </nav>

      <!-- Video Player Container -->
      <div class="relative max-w-5xl mx-auto">
        <!-- Glow Effect -->
        <div class="absolute -inset-4 bg-gradient-to-r from-green-500/20 via-green-200/20 to-yellow-500/20 rounded-3xl blur-2xl opacity-60"></div>
        
        <!-- Player -->
        <div class="relative bg-black rounded-2xl overflow-hidden shadow-2xl border border-white/10">
          <div class="video-player aspect-video" set:html={video.content} />
        </div>
      </div>

      <!-- Video Info -->
      <div class="max-w-5xl mx-auto mt-8">
        <div class="flex flex-wrap items-center gap-4 mb-4">
          <span class="inline-flex items-center gap-2 px-4 py-2 bg-green-500/20 rounded-full text-green-400 text-sm font-bold">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
            </svg>
            Vidéo #{String(video.videoNumber).padStart(2, '0')}
          </span>
          <span class="text-white/50 text-sm">{video.date}</span>
        </div>

        <h1 class="text-2xl md:text-3xl lg:text-4xl font-black text-white leading-tight mb-4" set:html={video.title} />

      </div>
    </div>
  </section>

  <!-- Description Section -->
  <section class="py-16 bg-white">
    <div class="max-w-screen-md mx-auto px-6 md:px-12">
      <div class="flex items-center gap-3 mb-6">
        <div class="w-10 h-1 bg-gradient-to-r from-green-500 to-yellow-500 rounded-full"></div>
        <span class="text-green-600 text-sm font-bold uppercase tracking-wider">À propos</span>
      </div>
      <h2 class="text-2xl md:text-3xl font-black text-gray-900 mb-6">
        Description de la vidéo
      </h2>
      {video.content ? (
        <div class="prose prose-lg max-w-none text-gray-600" set:html={video.content} />
      ) : (
        <p class="text-gray-500">Aucune description disponible pour cette vidéo.</p>
      )}

      <!-- Share Buttons -->
      <div class="flex flex-wrap items-center gap-4 mt-10 pt-8 border-t border-gray-200">
        <span class="text-gray-500 text-sm font-medium">Partager :</span>
        <div class="flex items-center gap-2">
          <a 
            href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-gray-100 hover:bg-blue-500 text-gray-600 hover:text-white flex items-center justify-center transition-all"
            title="Partager sur Facebook"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a 
            href={`https://twitter.com/intent/tweet?url=${encodeURIComponent(Astro.url.href)}&text=${encodeURIComponent(video.title)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-gray-100 hover:bg-black text-gray-600 hover:text-white flex items-center justify-center transition-all"
            title="Partager sur X"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a 
            href={`https://www.linkedin.com/shareArticle?mini=true&url=${encodeURIComponent(Astro.url.href)}&title=${encodeURIComponent(video.title)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-gray-100 hover:bg-blue-600 text-gray-600 hover:text-white flex items-center justify-center transition-all"
            title="Partager sur LinkedIn"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a 
            href={`https://wa.me/?text=${encodeURIComponent(video.title + ' ' + Astro.url.href)}`}
            target="_blank"
            rel="noopener noreferrer"
            class="w-10 h-10 rounded-full bg-gray-100 hover:bg-green-500 text-gray-600 hover:text-white flex items-center justify-center transition-all"
            title="Partager sur WhatsApp"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Other Videos -->
  {otherVideos.length > 0 && (
    <section class="py-16 md:py-24 bg-[#f8f8f6]">
      <div class="max-w-screen-xl mx-auto px-6 md:px-12">
        
        <!-- Section Header -->
        <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-12">
          <div>
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-1 bg-gradient-to-r from-green-500 to-yellow-900 rounded-full"></div>
              <span class="text-green-600 text-sm font-bold uppercase tracking-wider">Suggestions</span>
            </div>
            <h2 class="text-3xl md:text-4xl font-black text-gray-900">
              Autres vidéos
            </h2>
          </div>
          <a 
            href="/videos"
            class="inline-flex items-center gap-2 text-green-600 hover:text-green-700 font-bold transition-colors group"
          >
            Voir toutes les vidéos
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
            </svg>
          </a>
        </div>

        <!-- Videos Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          {otherVideos.map((otherVideo: any) => {
            const otherNumber = videos.findIndex((v: any) => v.slug === otherVideo.slug) + 1;

            return (
              <a href={`/videos/${otherVideo.slug}`} class="group block">
                <article class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-500 hover:-translate-y-1 border border-gray-100">
                  
                  <!-- Thumbnail -->
                  <div class="relative aspect-video overflow-hidden">
                    {otherVideo.featuredImage?.node?.mediaItemUrl ? (
                      <img
                        src={otherVideo.featuredImage.node.mediaItemUrl || video}
                        alt={otherVideo.title}
                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                        loading="lazy"
                      />
                    ) : (
                      <div class="w-full h-full bg-gradient-to-br from-green-500 to-yellow-500 flex items-center justify-center">
                        <svg class="w-10 h-10 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                      </div>
                    )}

                    <!-- Play Overlay -->
                    <div class="absolute inset-0 flex items-center justify-center bg-black/0 group-hover:bg-black/40 transition-all duration-300">
                      <div class="w-12 h-12 rounded-full bg-white/0 group-hover:bg-white flex items-center justify-center transition-all duration-300 scale-50 group-hover:scale-100 opacity-0 group-hover:opacity-100">
                        <svg class="w-5 h-5 text-green-500 ml-0.5" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M8 5v14l11-7z"/>
                        </svg>
                      </div>
                    </div>

                    <!-- Number Badge -->
                    <div class="absolute top-2 left-2 w-7 h-7 rounded bg-black/70 backdrop-blur-sm flex items-center justify-center">
                      <span class="text-white text-xs font-bold">{String(otherNumber).padStart(2, '0')}</span>
                    </div>
                  </div>

                  <!-- Content -->
                  <div class="p-4">
                    <h3 class="font-bold text-gray-900 line-clamp-2 group-hover:text-green-600 transition-colors text-sm leading-snug" set:html={otherVideo.title} />
                  </div>
                </article>
              </a>
            );
          })}
        </div>
      </div>
    </section>
  )}

  <!-- CTA Subscribe -->
  <section class="py-16 bg-[#0a0a0a]">
    <div class="max-w-screen-md mx-auto px-6 md:px-12 text-center">
      <div class="w-16 h-16 mx-auto mb-6 bg-gradient-to-br from-green-500 to-yellow-500 rounded-2xl flex items-center justify-center shadow-lg shadow-red-500/30">
        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
      </div>
      
      <h2 class="text-2xl md:text-3xl font-black text-white mb-4">
        Vous avez aimé cette vidéo ?
      </h2>
      <p class="text-white/60 mb-8 text-center">
        Abonnez-vous à notre chaîne pour ne manquer aucune nouvelle vidéo
      </p>
      
      <a 
        href="https://youtube.com/@votrechannel" 
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 px-8 py-4 bg-red-500 hover:bg-red-600 text-white font-bold rounded-full transition-colors"
      >
        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="currentColor">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
        S'abonner sur YouTube
      </a>
    </div>
  </section>

</Layout>

<style>
  /* Style pour le contenu vidéo WordPress */
  .video-player :global(iframe) {
    width: 100%;
    height: 100%;
    min-height: 400px;
    border: none;
  }

  .video-player :global(.wp-block-embed),
  .video-player :global(.wp-block-video) {
    width: 100%;
    height: 100%;
    margin: 0;
  }

  .video-player :global(figure) {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  .video-player :global(.wp-block-embed__wrapper) {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
  }

  .video-player :global(.wp-block-embed__wrapper iframe) {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Remove any paragraphs or text from video content */
  .video-player :global(p) {
    display: none;
  }
</style>