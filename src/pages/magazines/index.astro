---
import Layout from "~/layouts/PageLayout.astro";
import Banner from "~/components/widgets/Banner.astro";
import { getAllMagazines } from "~/utils/api.js";
import { Image } from "astro:assets";
import magazine_hero from "~/assets/images/magazine_hero.jpg";

const magazines = await getAllMagazines();
const latestMagazine = magazines?.[0];

const metadata = {
  title: "Nos Magazines",
  description:
    "Explorez notre collection de magazines sur l'engagement citoyen et le changement social.",
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Banner
    title={metadata.title}
    subtitle="Plongez dans l'univers de nos publications exclusives"
  >
    <Image
      src={magazine_hero}
      alt="Podcasts"
      class="w-full h-full object-cover absolute inset-0 border-0 z-0 scale-110 transition-transform duration-700"
    />
  </Banner>

  <!-- Main Content -->
  <section class="relative bg-[#faf9f7]">
    <div class="max-w-screen-2xl mx-auto px-6 md:px-12 lg:px-20 py-20 md:py-28">
      <!-- Section Header - Style Editorial -->
      <div class="max-w-3xl mb-16 md:mb-20">
        <div class="flex items-center gap-4 mb-6">
          <div class="w-12 h-[2px] bg-emerald-800"></div>
          <span
            class="text-emerald-800 font-medium tracking-widest text-xs uppercase"
          >
            Nos Publications
          </span>
        </div>
        <h2
          class="text-4xl md:text-5xl lg:text-6xl font-light text-slate-900 leading-[1.1] mb-6"
        >
          Découvrez notre <br class="hidden md:block" />
          <span class="font-semibold">collection de magazines</span>
        </h2>
        <p class="text-lg text-slate-600 leading-relaxed max-w-xl">
          Chaque édition explore en profondeur les enjeux de l'engagement
          citoyen et du changement social à travers des analyses et des
          témoignages exclusifs.
        </p>
      </div>

      <!-- Magazines Count -->
      {
        magazines.length > 0 && (
          <div class="flex items-center justify-between border-b border-slate-200 pb-6 mb-12">
            <p class="text-slate-500 text-sm">
              <span class="text-slate-900 font-semibold text-lg">
                {magazines.length}
              </span>
              <span class="ml-1">
                édition{magazines.length > 1 ? "s" : ""} 
                disponible{magazines.length > 1 ? "s" : ""}
              </span>
            </p>
          </div>
        )
      }

      {/* Featured Magazine */}
      {
        latestMagazine && (
          <a
            href={`/magazines/${latestMagazine.slug}`}
            class="group block mb-24"
          >
            <article class="relative grid md:grid-cols-2 gap-10 p-8 md:p-12 bg-gradient-to-br from-emerald-900 via-emerald-900 to-slate-900 rounded-3xl overflow-hidden">
              {/* Background pattern */}
              <div class="absolute inset-0 opacity-10">
                <div
                  class="absolute inset-0"
                  style="background-image: radial-gradient(circle at 2px 2px, white 1px, transparent 0); background-size: 32px 32px;"
                />
              </div>

              {/* Glow */}
              <div class="absolute top-0 right-0 w-80 h-80 bg-emerald-500/30 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2" />

              {/* Cover */}
              <div class="relative aspect-[4/5] max-h-[420px] overflow-hidden shadow-2xl">
                {latestMagazine.featuredImage?.node?.mediaItemUrl ? (
                  <img
                    src={latestMagazine.featuredImage.node.mediaItemUrl}
                    alt={latestMagazine.magazine?.titre}
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                  />
                ) : (
                  <div class="w-full h-full bg-gradient-to-br from-slate-800 to-slate-900 flex items-center justify-center">
                    <span class="text-white/40 uppercase tracking-widest text-sm">
                      Magazine
                    </span>
                  </div>
                )}

                {/* Badge */}
                <div class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm px-4 py-2 rounded-full">
                  <span class="text-xs font-bold tracking-widest text-emerald-800 uppercase">
                    Dernière édition
                  </span>
                </div>
              </div>

              {/* Content */}
              <div class="relative flex flex-col justify-center text-white">
                {/* Date */}
                {latestMagazine.magazine?.date && (
                  <time class="text-emerald-300 text-sm uppercase tracking-widest mb-4">
                    {new Date(latestMagazine.magazine.date).toLocaleDateString(
                      "fr-FR",
                      {
                        month: "long",
                        year: "numeric",
                      },
                    )}
                  </time>
                )}

                {/* Title */}
                <h3 class="text-3xl md:text-4xl lg:text-5xl font-semibold leading-tight mb-6 group-hover:text-emerald-300 transition-colors">
                  {latestMagazine.magazine?.titre}
                </h3>

                {/* Description */}
                {latestMagazine.magazine?.description && (
                  <p class="text-white/70 leading-relaxed mb-8 max-w-xl line-clamp-4">
                    {latestMagazine.magazine.description}
                  </p>
                )}

                {/* CTA */}
                <span class="inline-flex items-center gap-3 text-emerald-300 font-medium group-hover:text-white transition-colors">
                  Découvrir ce numéro
                  <svg
                    class="w-5 h-5 transition-transform group-hover:translate-x-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"
                    />
                  </svg>
                </span>
              </div>
            </article>
          </a>
        )
      }

      {
        magazines.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-x-8 gap-y-14">
            {magazines.slice(1).map((post: any, index: number) => {
              const magazine = post.magazine;
              const imageUrl = post.featuredImage?.node?.mediaItemUrl;
              const imageAlt =
                post.featuredImage?.node?.altText ||
                magazine?.titre ||
                "Magazine";
              const pdfUrl = magazine?.fichier?.node?.mediaItemUrl;
              const slug = post.slug;

              return (
                <article class="group">
                  {/* Image Container - Magazine Style */}
                  <a
                    href={`/magazines/${slug}`}
                    class="relative mb-6 block cursor-pointer"
                  >
                    {/* Shadow Effect */}
                    <div class="absolute -bottom-4 left-4 right-4 h-full bg-slate-900/10 rounded-sm blur-xl transition-all duration-500 group-hover:blur-2xl group-hover:-bottom-6" />

                    {/* Magazine Cover */}
                    <div class="relative aspect-[3/4] overflow-hidden bg-white rounded-sm shadow-lg transition-all duration-500 group-hover:shadow-2xl group-hover:-translate-y-2">
                      {imageUrl ? (
                        <img
                          src={imageUrl}
                          alt={imageAlt}
                          class="w-full h-full object-cover"
                          loading="lazy"
                        />
                      ) : (
                        <div class="w-full h-full bg-gradient-to-br from-slate-800 via-slate-700 to-slate-900 flex items-center justify-center p-8">
                          <div class="text-center">
                            <div class="w-16 h-[1px] bg-white/30 mx-auto mb-4" />
                            <span class="text-white/80 font-light text-lg tracking-wide">
                              Magazine
                            </span>
                            <div class="w-16 h-[1px] bg-white/30 mx-auto mt-4" />
                          </div>
                        </div>
                      )}

                      {/* Hover Overlay */}
                      <div class="absolute inset-0 bg-gradient-to-t from-slate-900 via-slate-900/60 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-500 flex flex-col justify-end p-6">
                        {pdfUrl && (
                          <span
                            class="inline-flex items-center justify-center gap-3 bg-white text-slate-900 px-6 py-3.5 font-medium text-sm tracking-wide hover:bg-emerald-800 hover:text-white transition-all duration-300"
                            onclick={`event.preventDefault(); event.stopPropagation(); window.open('${pdfUrl}', '_blank');`}
                          >
                            <svg
                              class="w-5 h-5"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                              stroke-width="1.5"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3"
                              />
                            </svg>
                            Télécharger le PDF
                          </span>
                        )}
                      </div>

                      {/* Edition Badge */}
                      <div class="absolute top-0 right-0 bg-emerald-800 text-white px-4 py-2">
                        <span class="text-[10px] font-medium tracking-widest uppercase block leading-none mb-0.5">
                          Édition
                        </span>
                        <span class="text-lg font-semibold leading-none">
                          {String(index + 1).padStart(2, "0")}
                        </span>
                      </div>
                    </div>
                  </a>

                  {/* Content */}
                  <div class="px-1">
                    {/* Date */}
                    {magazine?.date && (
                      <time class="text-emerald-800 text-xs font-medium tracking-widest uppercase mb-3 block">
                        {new Date(magazine.date).toLocaleDateString("fr-FR", {
                          month: "long",
                          year: "numeric",
                        })}
                      </time>
                    )}

                    {/* Title */}
                    {magazine?.titre && (
                      <a href={`/magazines/${slug}`}>
                        <h3 class="text-xl md:text-2xl font-semibold text-slate-900 leading-tight mb-3 group-hover:text-emerald-800 transition-colors duration-300">
                          {magazine.titre}
                        </h3>
                      </a>
                    )}

                    {/* Description */}
                    {magazine?.description && (
                      <p class="text-slate-500 leading-relaxed text-sm line-clamp-2 mb-4">
                        {magazine.description}
                      </p>
                    )}

                    {/* Read More Link */}
                    <a
                      href={`/magazines/${slug}`}
                      class="inline-flex items-center gap-2 text-slate-900 group/link hover:text-emerald-800 transition-colors"
                    >
                      <span class="text-sm font-medium">
                        Découvrir ce numéro
                      </span>
                      <svg
                        class="w-4 h-4 transition-all duration-300 group-hover/link:translate-x-1"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3"
                        />
                      </svg>
                    </a>
                  </div>
                </article>
              );
            })}
          </div>
        ) : (
          /* Empty State */
          <div class="text-center py-24 border border-dashed border-slate-300 rounded-sm">
            <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-slate-100 flex items-center justify-center">
              <svg
                class="w-10 h-10 text-slate-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                stroke-width="1"
              >
                <path d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
              </svg>
            </div>
            <div class="text-center">
              <h3 class="text-2xl text-center font-semibold text-slate-900 mb-3">
                Aucun magazine pour le moment
              </h3>
            </div>
            <p class="text-slate-500 text-center max-w-md mx-auto leading-relaxed">
              Notre équipe éditoriale prépare de nouveaux contenus passionnants.
              Revenez bientôt pour découvrir nos publications.
            </p>
          </div>
        )
      }

      {/* Load More */}
      {
        magazines.length > 6 && (
          <div class="text-center mt-16 pt-12 border-t border-slate-200">
            <button class="inline-flex items-center gap-3 bg-slate-900 text-white px-10 py-4 font-medium tracking-wide hover:bg-emerald-800 transition-all duration-300">
              <span>Voir plus d'éditions</span>
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                stroke-width="1.5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M19.5 8.25l-7.5 7.5-7.5-7.5"
                />
              </svg>
            </button>
          </div>
        )
      }
    </div>
  </section>
</Layout>
