---
import Layout from "~/layouts/PageLayout.astro";
import { getAllMembers } from "~/utils/api";
import Membres from "~/components/blog/Membres.astro";
import { Image } from "astro:assets";
import teamBanner from "~/assets/images/Equipe.jpeg";

const metadata = {
  title: 'Equipe - AfricTivistes CitizenLab Sénégal',
  description: "Découvrez les membres et l'univers de l'équipe CitizenLab Sénégal : des talents engagés pour renforcer la participation citoyenne.",
};

const members = await getAllMembers();
---

<Layout metadata={metadata}>
  <!-- Hero Banner -->
  <section class="relative isolate overflow-hidden min-h-[800px] md:min-h-[900px] lg:min-h-[1000px]">
    <div class="absolute inset-0">
      <Image
        src={teamBanner}
        alt="Équipe CitizenLab Sénégal"
        class="h-full w-full object-cover"
        width={1920}
        height={960}
        loading="eager"
        decoding="async"
    />
  </div>
    <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/70 to-black/40"></div>
    <div class="relative z-10 mx-auto flex max-w-6xl flex-col gap-6 px-4 py-32 text-white sm:px-6 lg:px-8">
      <p class="text-sm uppercase tracking-[0.3em] text-primary-light">Notre équipe</p>
      <h1 class="text-4xl font-black leading-tight sm:text-5xl lg:text-6xl">
        Une équipe engagée au service de la participation citoyenne
      </h1>
      <p class="max-w-3xl text-lg text-slate-100 sm:text-xl">
        CitizenLab Sénégal fédère une communauté de talents complémentaires—stratèges, créateurs de contenu, formateurs et activistes—
        réunis pour développer des solutions innovantes et renforcer la démocratie participative.
      </p>
    </div>
  </section>

  <!-- Values Section -->
  <section class="relative overflow-hidden bg-white py-16 sm:py-20">
    <div class="absolute inset-0 -z-10 opacity-10">
      <div class="absolute inset-x-0 top-0 h-64 bg-gradient-to-r from-primary via-accent to-primary"></div>
    </div>
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl space-y-6">
        <div class="space-y-4">
          <span class="inline-flex items-center rounded-full bg-primary/10 px-4 py-1 text-sm font-semibold uppercase tracking-wide text-primary">
            Notre ADN
          </span>
          <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
            L'humain au centre, l'impact comme horizon
          </h2>
          <p class="text-lg text-gray-600">
            Notre équipe se construit autour de valeurs fortes : rigueur citoyenne, inclusion, innovation et partage.
            Nous cultivons un environnement collaboratif où chaque membre peut exprimer son expertise pour amplifier notre action commune.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Team Members -->
  <section id="team" class="bg-gradient-to-b from-white via-primary/5 to-white py-20 sm:py-24">
    <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
      <div class="mb-12 flex flex-col gap-6 text-gray-900 lg:flex-row lg:items-end lg:justify-between">
        <div class="space-y-3">
          <p class="text-sm uppercase tracking-[0.3em] text-primary-light">Esprit d'équipe</p>
          <h2 class="text-3xl font-bold sm:text-4xl">Des acteurs engagés pour transformer le quotidien citoyen</h2>
        </div>
      </div>
      <Membres team={members} />
    </div>
  </section>

</Layout>
