---
import Layout from '~/layouts/PageLayout.astro';
import { getAllFormations } from '~/utils/api.js';

// Génération des chemins statiques
export async function getStaticPaths() {
  const formations = await getAllFormations();

  return formations.map((post: any) => ({
    params: { slug: post.slug },
  }));
}

// Récupération du slug depuis la route
const { slug } = Astro.params;

// Récupération des formations depuis WP
const formations = await getAllFormations();
const formation = formations.find((post: any) => post.slug === slug);

if (!formation) {
  return Astro.redirect('/formations');
}

// Transformation des données pour la page
const bootcamp = {
  title: formation.formation?.nom ?? "Formation",
  description: formation.formation?.description ?? "",
  date: formation.formation?.date
    ? new Date(formation.formation.date).toLocaleDateString("fr-FR", {
        year: "numeric",
        month: "long",
        day: "numeric",
      })
    : "",
  duration: formation.formation?.duree ?? "",
  participants: formation.formation?.places ?? "",
  location: formation.formation?.lieu ?? "",
  image: formation.featuredImage?.node?.mediaItemUrl ?? null,
  program: formation.formation?.programme ?? [],
  instructor: formation.formation?.formateur ? [formation.formation.formateur] : [],
  bio: formation.formation?.profession ?? "",
  status: Array.isArray(formation.formation?.statut) 
    ? formation.formation.statut[0] 
    : formation.formation?.statut ?? "",
  price: formation.formation?.prix ?? "Gratuit",
  inscriptionLink: formation.formation?.lien?.url ?? "#",
};

function getStatusColor(status: string) {
  switch(status) {
    case "Inscriptions ouvertes":
      return "bg-green-100 text-green-800 border-green-300";
    case "Complet":
      return "bg-orange-100 text-orange-800 border-orange-300";
    case "Terminée":
      return "bg-red-100 text-red-800 border-red-300";
    default:
      return "bg-blue-100 text-blue-800 border-blue-300";
  }
}

const metadata = {
  title: `${bootcamp.title} - CitizenLab Cameroun`,
  description: bootcamp.description,
};
---

<Layout metadata={metadata}>

  <!-- Hero avec effet parallaxe -->
  <section class="relative h-[70vh] md:h-[85vh] overflow-hidden">
    {bootcamp.image && (
      <div class="absolute inset-0">
        <img 
          src={bootcamp.image} 
          alt={bootcamp.title}
          class="w-full h-full object-cover scale-110 transition-transform duration-700 hover:scale-100"
        />
        <div class="absolute inset-0 bg-gradient-to-br from-green-900/90 via-green-800/70 to-transparent"></div>
        <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,_var(--tw-gradient-stops))] from-transparent via-transparent to-black/40"></div>
      </div>
    )}

    <div class="relative h-full flex items-end">
      <div class="w-full p-6 md:p-12 pb-16 text-white">
        <div class="max-w-6xl mx-auto">
          <div class="flex flex-wrap items-center gap-3 mb-6">
            <span class={`px-5 py-2.5 rounded-full text-sm font-bold border-2 backdrop-blur-xl shadow-lg ${getStatusColor(bootcamp.status)}`}>
              {bootcamp.status === "Inscriptions ouvertes" && (
                <span class="inline-block w-2 h-2 rounded-full bg-green-500 mr-2 animate-pulse"></span>
              )}
              {bootcamp.status}
            </span>
            <span class="px-6 py-2.5 bg-gradient-to-r from-green-600 to-emerald-600 backdrop-blur-xl rounded-full text-lg font-extrabold shadow-lg border-2 border-white/20">
              {bootcamp.price}
            </span>
          </div>

          <h1 class="text-5xl md:text-7xl font-black mb-6 leading-tight drop-shadow-2xl">
            {bootcamp.title}
          </h1>
          <p class="text-xl md:text-2xl text-white/95 max-w-3xl font-light leading-relaxed drop-shadow-lg">
            {bootcamp.description}
          </p>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-white/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <!-- Contenu principal -->
  <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
    <div class="max-w-7xl mx-auto px-6 grid lg:grid-cols-3 gap-12">

      <!-- Colonne principale -->
      <div class="lg:col-span-2 space-y-16">


        <!-- Formateurs -->
        <div class="scroll-mt-20">
          <div class="flex items-center gap-4 mb-10">
            <div class="w-1 h-12 bg-gradient-to-b from-green-600 to-emerald-600 rounded-full"></div>
            <h2 class="text-4xl font-black text-gray-900">Votre formateur</h2>
          </div>
          <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-3xl p-8 border-2 border-green-100 shadow-xl">
            <div class="flex flex-col md:flex-row items-center gap-8">
              <div class="relative group">
                <div class="absolute inset-0 bg-gradient-to-br from-green-400 to-emerald-400 rounded-3xl blur-xl opacity-50 group-hover:opacity-75 transition-opacity"></div>
                <div class="relative w-32 h-32 bg-gradient-to-br from-green-600 to-emerald-600 rounded-3xl flex items-center justify-center border-4 border-white shadow-2xl">
                  <svg class="w-16 h-16 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                  </svg>
                </div>
              </div>
              <div class="flex-1 text-center md:text-left">
                <h3 class="text-3xl font-black text-gray-900 mb-2">{bootcamp.instructor}</h3>
                {bootcamp.bio && <p class="text-gray-700 text-lg font-medium">{bootcamp.bio}</p>}
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar infos pratiques + CTA -->
      <div class="lg:col-span-1">
        <div class="sticky top-8 space-y-6">
          <!-- Card principale -->
          <div class="bg-white rounded-3xl p-8 shadow-2xl border-2 border-gray-100 overflow-hidden relative">
            <div class="absolute top-0 right-0 w-40 h-40 bg-gradient-to-br from-green-100 to-emerald-100 rounded-full -mr-20 -mt-20 opacity-50"></div>
            
            <h3 class="text-3xl font-black text-gray-900 mb-8 relative">Informations pratiques</h3>
            
            <dl class="space-y-6 relative">
              <div class="flex items-start gap-4 group">
                <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-500 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform shadow-lg">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
                <div>
                  <dt class="font-bold text-gray-900 text-lg mb-1">Dates</dt>
                  <dd class="text-gray-600 font-medium">{bootcamp.date}</dd>
                </div>
              </div>

              <div class="flex items-start gap-4 group">
                <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-500 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform shadow-lg">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <dt class="font-bold text-gray-900 text-lg mb-1">Durée</dt>
                  <dd class="text-gray-600 font-medium">{bootcamp.duration}</dd>
                </div>
              </div>

              <div class="flex items-start gap-4 group">
                <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-500 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform shadow-lg">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0zM15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                  </svg>
                </div>
                <div>
                  <dt class="font-bold text-gray-900 text-lg mb-1">Lieu</dt>
                  <dd class="text-gray-600 font-medium">{bootcamp.location}</dd>
                </div>
              </div>

              <div class="flex items-start gap-4 group">
                <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-500 rounded-2xl flex items-center justify-center flex-shrink-0 group-hover:scale-110 transition-transform shadow-lg">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                </div>
                <div>
                  <dt class="font-bold text-gray-900 text-lg mb-1">Places</dt>
                  <dd class="text-gray-600 font-medium">{bootcamp.participants}</dd>
                </div>
              </div>
            </dl>

            <!-- CTA Inscription -->
            {bootcamp.status === "Inscriptions ouvertes" && (
              <a 
                href={bootcamp.inscriptionLink} 
                target="_blank"
                class="mt-10 inline-block w-full text-center bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 text-white font-extrabold py-4 rounded-full shadow-lg transition-all duration-300"
              >
                S'inscrire à la formation
              </a>
            )}
          </div>

          <!-- Badge confiance -->
          <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl p-6 border-2 border-green-100 text-center">
            <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-green-600 to-emerald-600 rounded-2xl flex items-center justify-center shadow-lg">
              <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
            </div>
            <p class="text-gray-700 font-bold text-sm">Attestation délivrée après la formation</p>
            <p class="text-gray-600 text-xs mt-1">AfricTivistes CitizenLab Cameroun</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>